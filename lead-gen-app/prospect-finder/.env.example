# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host.neon.tech/prospect_finder?sslmode=require

# Anthropic API (for embeddings in RAG and partnership pitch generation)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Proxy Configuration
PROXY_CONFIG_PATH=./config/proxies.json

# Rate Limiting Configuration
RATE_LIMIT_CONFIG_PATH=./config/scraper-limits.json

# Logging
LOG_LEVEL=info
# Options: debug, info, warn, error

# Optional: Email Verification (Hunter.io - 100 free/month)
HUNTER_API_KEY=

# Optional: Future API Integrations
APOLLO_API_KEY=
CLEARBIT_API_KEY=

# Browser Configuration
HEADLESS=true
# Set to false for debugging browser automation

# Scraping Configuration
MAX_CONCURRENT_BROWSERS=2
BROWSER_TIMEOUT_MS=30000
