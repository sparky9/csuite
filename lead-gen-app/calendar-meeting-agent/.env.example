# Calendar Platform APIs
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/oauth2callback
GOOGLE_CALENDAR_ACCESS_TOKEN=your_google_access_token
GOOGLE_CALENDAR_REFRESH_TOKEN=your_google_refresh_token

OUTLOOK_CALENDAR_CLIENT_ID=your_outlook_client_id
OUTLOOK_CALENDAR_CLIENT_SECRET=your_outlook_client_secret
OUTLOOK_CALENDAR_ACCESS_TOKEN=your_outlook_access_token
OUTLOOK_CALENDAR_REFRESH_TOKEN=your_outlook_refresh_token

# Virtual Meeting Platforms
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_ACCOUNT_ID=your_zoom_account_id

TEAMS_CLIENT_ID=your_teams_client_id
TEAMS_CLIENT_SECRET=your_teams_client_secret

# Meeting Analytics & Intelligence
ENABLE_MEETING_RECORDING=false
TRANSCRIPTION_SERVICE=assemblyai
ASSEMBLYAI_API_KEY=your_assemblyai_key
INSIGHTS_SAMPLING_WINDOW_DAYS=30

# Scheduling Preferences
DEFAULT_TIMEZONE=America/New_York
WORKING_HOURS_START=09:00
WORKING_HOURS_END=17:00
MEETING_BUFFER_MINUTES=15
MAX_MEETINGS_PER_DAY=8
ALLOW_BACK_TO_BACK=false

# Database (optional - enables persistence)
DATABASE_URL=postgresql://user:pass@host.neon.tech/calendar_db?sslmode=require
DATABASE_SSL=true

# Scheduler knobs
DEFAULT_MEETING_DURATION_MINUTES=30
MIN_SLOT_GRANULARITY_MINUTES=15
HOLD_WINDOW_DAYS=21
PRIORITY_MEETING_TYPES=discovery:intake,standup:daily_sync,retro:team_review

# Logging
LOG_LEVEL=info

# Email Integration (for notifications)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Notification preferences
NOTIFICATION_FROM_EMAIL=assistant@calendar.local
ENABLE_SMS_NOTIFICATIONS=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_FROM_NUMBER=+15555551212
