{
  "name": "@ocsuite/module-sdk",
  "version": "0.1.0",
  "private": true,
  "description": "SDK defining the contract between control plane and MCP workers",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validation": {
      "import": "./dist/validation.js",
      "types": "./dist/validation.d.ts"
    },
    "./versioning": {
      "import": "./dist/versioning.js",
      "types": "./dist/versioning.d.ts"
    },
    "./widgets": {
      "import": "./dist/widgets.js",
      "types": "./dist/widgets.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "echo 'No linting configured yet'"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/semver": "^7.5.6",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
