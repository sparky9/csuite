# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ocsuite_dev?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Fireworks AI (Qwen3)
FIREWORKS_API_KEY=fw_...
FIREWORKS_BASE_URL=https://api.fireworks.ai/inference/v1

# Encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
MASTER_ENCRYPTION_KEY=base64_encoded_32_byte_key_here
MASTER_ENCRYPTION_KEY_VERSION=1
# Optional JSON map of legacy versions to keys, e.g. {"1":"oldKey"}
MASTER_ENCRYPTION_PREVIOUS_KEYS=

# Observability
OBSERVABILITY_ENABLED=false
OBSERVABILITY_SERVICE_NAME=ocsuite-api
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
OBSERVABILITY_METRIC_INTERVAL_MS=15000
OTEL_LOG_LEVEL=warn

# Access Logs
ACCESS_LOG_RETENTION_DAYS=90

# API Configuration
API_PORT=3001
API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# OAuth Providers
GOOGLE_CLIENT_ID=...apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=...
GOOGLE_REDIRECT_URI=http://localhost:3001/connectors/google/callback

# Environment
NODE_ENV=development

# Video Production (Director MCP)
# AssemblyAI - for transcription and speech-to-text
ASSEMBLYAI_API_KEY=your_assemblyai_key_here

# Shotstack - for video editing and rendering
SHOTSTACK_API_KEY=your_shotstack_key_here

# Pexels - for stock videos and images
PEXELS_API_KEY=your_pexels_key_here

# Unsplash - for stock images
UNSPLASH_API_KEY=your_unsplash_key_here

# Freesound - for stock audio and music
FREESOUND_API_KEY=your_freesound_key_here

# Runway ML - for AI video generation and enhancement
RUNWAY_API_KEY=your_runway_key_here

# ElevenLabs - for text-to-speech and voice cloning
ELEVENLABS_API_KEY=your_elevenlabs_key_here
